{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "assets/**/*", "use": "@vercel/static" },
    { "src": "data/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/buscar", "dest": "/api/buscar.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
